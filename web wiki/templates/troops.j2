{% extends "base.j2" %}

{% block content %}
<h2>Leaders</h2>

<style>
.attributes th{ color: #777; font-size: 10px; }
</style>

<table>
    <tr>
        <th>Icon</th>
        <th>Name/Type</th>
        <th>Grade</th>
        <th>Speciality</th>
        <th>Primary W.</th>
        <th>Second. W.</th>
        <th>Armour</th>
        <th>Mount</th>
        <th>Skill</th>
    </tr>
    {% for unit in troops %}
    <tr>
        <td><img src="{{unit["icon"][0]}}" alt="{{unit["icon"][1]}}" title="{{unit["icon"][1]}}"></td>
        <td><a href="">{{unit["name"]}}</a><br>{{unit["troop-class"]}}</td>

        <td>{{unit["grade"]}}</td>

        <td>
            <table class="inner">
                <tr>
                    <th>Melee: </th><td>{{unit["melee-speciality"]}}</td>
                </tr><tr>
                    <th>Defence: </th><td>{{unit["range-speciality"]}}</td>
                </tr><tr>
                    <th>Range: </th><td>{{unit["cavalry-speciality"]}}</td>
                </tr>
            </table>
        </td>

        <td>
            <b>m: </b>{{unit["primary-main-weapon"][1]}}<br>
            <b>s: </b>{{unit["primary-sub-weapon"][1]}}
        </td>

        <td>
            <b>m: </b>{{unit["secondary-main-weapon"][1]}}<br>
            <b>s: </b>{{unit["secondary-sub-weapon"][1]}}
        </td>

        <td>
            {{unit["armour"][0]}}<br>
            {{unit["armour"][1]}}
        </td>

        <td>
            {{unit["mount"][0]}}<br>
            {{unit["mount"][1]}}<br>
            {{unit["mount"][2]}}
        </td>

        <td>{{unit["skill"]}}</td>

    </tr>
    {% endfor %}
</table>

{% endblock %}

